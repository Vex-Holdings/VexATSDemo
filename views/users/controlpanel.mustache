{{> header}}
    <title>Principal Control Panel</title>
</head>
<body>
    <div class="container">
        {{> principalmenu}}
        <h2>ATS Demo - Principal Control Panel</h2>
        <hr>
        <h3>Submitted Accounts pending review</h3>
        <div class="list-group">
            <ul>
                {{#users}}
                <div class="row">
                <div class="col-4 bold">{{firstname}} {{lastname}}</div>
                </div>
                <div class="row">
                <div class="col-2">{{prefphone}}</div>
                <div class="col-2">{{phonenumber}}</div>
                </div>
                <div class="row">
                <div class="col-4">{{email}}</div>
                </div>
                <div class="row">
                <div class="col-2">Account Type:</div>
                <div class="col-2">{{accounttype}}</div>
                </div>
                <div class="row">
                <div class="col-2">Status:</div>
                <div class="col-2">{{status}}</div>
                </div>
                <a href="/users/accountdetails/{{id}}"><button class="btn btn-info">Review Account</button></a>
                <hr>
                {{/users}}        
            </ul>
        </div>
        <h3>Trade Matches</h3>
        <table>
            <tr><th>Index</th><th>Buy Order</th><th>Sell Order</th><th>Shares</th><th>Price</th><th>Status</th><th>Timestamp</th></tr>
            {{#matches}}
            <tr>
            <td>{{id}}</td>
            <td>{{buyid}}</td>
            <td>{{sellid}}</td>
            <td>{{size}}</td>
            <td>{{price}}</td>
            <td>{{status}}</td>
            <td>{{updatedAt}}</td>
            </tr>
            {{/matches}}
        </table>
        <hr>
        <h3>Orders</h3>
        <table>
            <tr><th>Index</th><th>User</th><th>Stock</th><th>Buy/Sell</th><th>Shares</th><th>Price</th><th>MSHF Cert</th><th>Timestamp</th></tr>
            {{#orders}}
            <tr>
            <td>{{id}}</td>
            <td>{{firstname}} {{lastname}}</td>
            <td>{{name}}</td>
            <td>{{type}}</td>
            <td>{{size}}</td>
            <td>{{price}}</td>
            <td>{{mshfid}}</td>
            <td>{{updatedAt}}</td>
            </tr>
            {{/orders}}
        </table>
        <hr>
        <h3>TA Ops - COD Log</h3>
        <table>
            <tr><th>Index</th><th>COD Sell</th><th>COD Buy</th><th>Shares</th><th>Amount</th></tr>
            {{#codlogs}}
            <tr>
            <td>{{id}}</td>
            <td>{{sellid}}</td>
            <td>{{buyid}}</td>
            <td>{{shares}}</td>
            <td>{{dollars}}</td>
            </tr>
            {{/codlogs}}
        </table>
        <hr>
        <h3>TA Ops - COD Buys</h3>
        <table>
            <tr><th>Index</th><th>User</th><th>Amount</th><th>Status</th></tr>
            {{#codbuys}}
            <tr>
            <td>{{id}}</td>
            <td>{{firstname}} {{lastname}}</td>
            <td>{{amount}}</td>
            <td>{{status}}</td>
            </tr>
            {{/codbuys}}
        </table>
        <hr>
        <h3>TA Ops - COD Sells</h3>
        <table>
            <tr><th>Index</th><th>MSHF Cert</th><th>Shares</th><th>Status</th></tr>
            {{#codsells}}
            <tr>
            <td>{{id}}</td>
            <td>{{mshfid}}</td>
            <td>{{amount}}</td>
            <td>{{status}}</td>
            </tr>
            {{/codsells}}
        </table>
        {{#message}}
        <div class="alert alert-danger" role="alert">
            {{message}}
        </div>
    {{/message}}
    </div>
{{> footer}}
