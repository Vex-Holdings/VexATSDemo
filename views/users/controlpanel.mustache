{{> header}}
    <title>Personal New Account Form</title>
</head>
<body>
    <div class="container">
        {{> menu}}
        <h2>ATS Demo - Principal Control Panel</h2>
        <hr>
        <h3>Submitted Accounts pending review</h3>
        <div class="list-group">
            <ul>
                {{#users}}
                <div class="row">
                <div class="col-2">{{firstname}}</div>
                <div class="col-2">{{lastname}}</div>
                </div>
                <div class="row">
                <div class="col-2">{{prefphone}}</div>
                <div class="col-2">{{phonenumber}}</div>
                </div>
                <div class="row">
                <div class="col-4">{{email}}</div>
                </div>
                <div class="row">
                <div class="col-2">Account Type:</div>
                <div class="col-2">{{accounttype}}</div>
                </div>
                <a href="/users/accountdetails/{{id}}"><button class="btn btn-info">Review Account</button></a>
                <hr>
                {{/users}}        
            </ul>
        </div>
    </div>
{{> footer}}